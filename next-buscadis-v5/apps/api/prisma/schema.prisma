generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  anuncios  Anuncio[]
}

model Anuncio {
  id          String   @id @default(cuid())
  tipo        String   // empleos, inmuebles, vehiculos, servicios, productos
  categoria   String
  subCategoria String?
  titulo      String
  descripcion String   @db.Text
  precio      Float?
  moneda      String   @default("PEN")
  ubicacion   Json
  contacto    Json
  multimedia  Json?
  estado      String   @default("activo")
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([tipo])
  @@index([categoria])
  @@index([estado])
}
